<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/material_baseline_grid_2x"
    android:layout_marginEnd="@dimen/material_baseline_grid_0.5x"
    android:layout_marginStart="@dimen/material_baseline_grid_0.5x"
    android:elevation="@dimen/cardview_default_elevation">

    <android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_subscriber_photo"
        android:layout_width="@dimen/material_baseline_grid_10x"
        android:layout_height="@dimen/material_baseline_grid_10x"
        android:layout_marginEnd="@dimen/material_baseline_grid_1x"
        android:layout_marginStart="@dimen/material_baseline_grid_1x"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:contentDescription="@string/subscriber_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView_subscriber_name"
        android:layout_width="@dimen/material_baseline_grid_12x"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_baseline_grid_1x"
        android:layout_marginEnd="@dimen/material_baseline_grid_1x"
        android:layout_marginStart="@dimen/material_baseline_grid_1x"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_subscriber_photo"
        tools:text="Name" />
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>